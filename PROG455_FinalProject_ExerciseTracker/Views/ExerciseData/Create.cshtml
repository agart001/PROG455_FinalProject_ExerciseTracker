@model PROG455_FinalProject_ExerciseTracker.Models.IExerciseDataForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>IExerciseDataForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input name="DataType" value=@Model.GenericTypeName() type="hidden"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            @switch(Model.GenericTypeName())
            {
                case "Tuple`2":
                    <div class="form-group">
                        <label class="control-label">Sets</label>
                        <input class="form-control" name="Sets" type="number" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Reps</label>
                        <input class="form-control" name="Reps" type="number" />
                    </div>
                    break;
                case "TimeSpan":
                    <div class="form-group">
                        <label class="control-label">Time</label>
                        <input class="form-control" name="Time" type="time" />
                    </div>
                    break;
                default:
                    <div class="form-group">
                        <label class="control-label">Value</label>
                        <input class="form-control" name="Value" type="text" />
                    </div>
                    break;
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
